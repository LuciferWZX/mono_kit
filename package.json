    "del": "^8.0.0",
    "eslint": "^9.27.0",
    "gulp": "^5.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "react": "^19.1.0",
